@page
@model MegaDeskWeb.Pages.Desks.IndexModel

@{
    ViewData["Title"] = "All Custom Quotes";
}

<h1>All Custom Quotes</h1>


<form>
    Search By Last Name:
    <input type="text" asp-for="SearchString" />
    <input type="submit" value="Filter" />
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-page="./Index" asp-route-SortOrder="@Model.CustomerSort">
                    @Html.DisplayNameFor(model => model.DeskQuote[0].LastName)
                    </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeskQuote[0].FirstName)
            </th>
            <th>
                <a asp-page="./Index" asp-route-SortOrder="@Model.DateSort">
                    @Html.DisplayNameFor(model => model.DeskQuote[0].QuoteDate)
                    </a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.DeskQuote) {
        <tr>
            <td>
                <a asp-page="./Details" asp-route-id="@item.DeskQuoteID"> @Html.DisplayFor(modelItem => item.LastName)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuoteDate)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.DeskQuoteID">Edit</a> |
                <a asp-page="./Delete" asp-route-id="@item.DeskQuoteID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<p>
    <a asp-page="Create">Create Your Own Quote</a>

</p>
